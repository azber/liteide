<?xml version="1.0" encoding="UTF-8"?>
<mime-info xmlns='http://www.freedesktop.org/standards/shared-mime-info'>
	<mime-type type="text/x-gosrc" id="gosrc" work="$(EDITOR_DIR)">
		<lookup mime-type="text/x-gomake" file="Makefile" top="1"/>
		<lookup mime-type="text/x-gopro" file="*.e64" top="1"/>		
		<config id="Go" name="GO" value="$(GOROOT)/bin/go"/>
		<config id="GoExec" name="GOEXEC" value="$(LITEAPPDIR)/goexec"/>
		<config id="ErrRegex" name="ERRREGEX" value="([\w\d_\\/\.]+):(\d+):"/>
		<custom id="TargetArgs" name="TARGETARGS" value=""/>		
		<custom id="BuildArgs" name="BUILDARGS" value=""/>
		<custom id="InstallArgs" name="INSTALLARGS" value=""/>
		<action id="FileBuild" img="gray/filebuild.png" key="F6" cmd="$(GO)" args="build $(BUILDARGS) $(EDITOR_NAME)" save="editor" output="true" codec="utf-8" regex="$(ERRREGEX)" />
		<action id="FileRun" img="gray/filerun.png" key="Alt+F6" cmd="$(GO)" args="run $(EDITOR_NAME)" output="true" codec="utf-8" readline="true"/>
		<action id="Sep" separator="true"/>
		<action id="Build" img="gray/build.png" key="Alt+F7" cmd="$(GO)" args="build $(BUILDARGS)" save="all" output="true" codec="utf-8" regex="$(ERRREGEX)" />
		<action id="Install" img="gray/install.png" key="Alt+F8" cmd="$(GO)" args="install $(INSTALLARGS)" save="all" output="true" codec="utf-8" regex="$(ERRREGEX)" />
		<action id="RunTerm" img="gray/runterm.png" key="Alt+Shift+F5" cmd="$(LITEIDE_EXEC)" args="$(LITEIDE_EXECOPT) $(GOEXEC) $(EDITOR_DIRNAME) $(TARGETARGS)" output="false" readline="true"/>
		<action id="Run" img="gray/run.png" key="Alt+F5" cmd="$(EDITOR_DIR)/$(EDITOR_DIRNAME)" args="$(TARGETARGS)" output="true" codec="utf-8" readline="true"/>
		<action id="BuildAndRun" img="gray/buildrun.png" key="Alt+Shift+F7" task="Build;Run"/>
	</mime-type>
</mime-info>