<?xml version="1.0" encoding="UTF-8"?>
<mime-info xmlns='http://www.freedesktop.org/standards/shared-mime-info'>
  <mime-type type="text/x-gosrc" codec="utf-8">
    <sub-class-of type="text/plain"/>
    <comment>Golang Source File</comment>
    <glob pattern="*.go"/>
  </mime-type>
  <mime-type type="text/x-lua" codec="utf-8">
    <sub-class-of type="text/plain"/>
    <comment>Lua Source File</comment>
    <glob pattern="*.lua"/>
    <glob pattern="*.wlua"/>
  </mime-type>  
  <mime-type type="text/x-csrc" codec="system">
    <sub-class-of type="text/plain"/>
    <comment>C Source File</comment>
    <glob pattern="*.c"/>
    <glob pattern="*.cpp"/>
    <glob pattern="*.cxx"/>
    <glob pattern="*.cc"/>
    <glob pattern="*.c++"/>
    <glob pattern="*.h"/>
	<glob pattern="*.hpp"/>
	<glob pattern="*.hh"/>
	<glob pattern="*.hxx"/>
	<glob pattern="*.h++"/>	
	<glob pattern="*.hcc"/>		
	<glob pattern="*.moc"/>		
  </mime-type> 
</mime-info>
