<?xml version="1.0" encoding="UTF-8"?>
<mime-info xmlns='http://www.freedesktop.org/standards/shared-mime-info'>
	<mime-type type="text/x-makefile" id="makefile">
		<config id="Make" name="MAKE" value="$(LITEIDE_MAKE)"/>
		<config id="GoExec" name="GOEXEC" value="$(LITEAPPDIR)/goexec"/>
		<custom id="TargetArgs" name="$(TARGETARGS)" value=""/>
		<action id="Build" img="make/build.png" key="F7" cmd="$(MAKE)" args="-f $(PROJECTNAME) all" save="project" output="true" codec="" regex="([\w\d:_\\/\.]+):(\d+)" />
		<action id="Rebuild" img="make/rebuild.png" key="CTRL+F7" cmd="$(MAKE)" args="-B -f $(PROJECTNAME) all" save="project" output="true" codec="" regex="([\w\d:_\\/\.]+):(\d+)" />
		<action id="Clean" img="make/clean.png" cmd="$(MAKE)" args="-f $(PROJECTNAME) clean" save="project" output="true"/>
		<action id="Install" img="make/install.png" cmd="$(MAKE)" args="-f $(PROJECTNAME) install" save="project" output="true"/>
		<action id="Exec" img="make/exec.png" key="CTRL+SHIFT+F5" cmd="$(LITEIDE_EXEC)" args="$(LITEIDE_EXECOPT) $(GOEXEC) -w $(WORKDIR) $(TARGETPATH)" output="false" readline="true"/>
		<action id="Run" img="make/run.png" key="CTRL+F5" cmd="$(TARGETPATH)" args="" output="true" codec="utf-8" readline="true"/>
		<action id="BuildAndRun" img="make/buildandrun.png" key="CTRL+F7" task="Build;Run"/>
	</mime-type>
</mime-info>