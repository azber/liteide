<?xml version="1.0" encoding="UTF-8"?>
<mime-info xmlns='http://www.freedesktop.org/standards/shared-mime-info'>
	<mime-type type="text/x-makefile" id="makefile" work="$(PROJECT_DIR)">
		<config id="Make" name="MAKE" value="$(LITEIDE_MAKE)"/>
		<config id="GoExec" name="GOEXEC" value="$(LITEAPPDIR)/goexec"/>
		<custom id="TargetArgs" name="TARGETARGS" value=""/>
		<action id="Build" img="image/build.png" key="F7" cmd="$(MAKE)" args="-f $(PROJECT_NAME) all" save="all" output="true" codec="" regex="([\w\d:_\\/\.]+):(\d+)" />
		<action id="Rebuild" img="image/rebuild.png" key="CTRL+F7" cmd="$(MAKE)" args="-B -f $(PROJECT_NAME) all" save="all" output="true" codec="" regex="([\w\d:_\\/\.]+):(\d+)" />
		<action id="Clean" img="image/clean.png" cmd="$(MAKE)" args="-f $(PROJEC_TNAME) clean" save="all" output="true"/>
		<action id="Install" img="image/install.png" cmd="$(MAKE)" args="-f $(PROJECT_NAME) install" save="all" output="true"/>
		<action id="RunTerm" img="image/runterm.png" key="CTRL+SHIFT+F5" cmd="$(LITEIDE_EXEC)" args="$(LITEIDE_EXECOPT) $(GOEXEC) -w $(WORKDIR) $(TARGETPATH)" output="false" readline="true"/>
		<action id="Run" img="image/run.png" key="CTRL+F5" cmd="$(TARGETPATH)" args="" output="true" codec="utf-8" readline="true"/>
		<action id="BuildAndRun" img="image/buildrun.png" key="CTRL+F7" task="Build;Run"/>
	</mime-type>
</mime-info>